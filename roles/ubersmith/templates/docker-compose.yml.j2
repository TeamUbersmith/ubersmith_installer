version: '3'
services:
  solr:
    image: quay.io/ubersmith/solr:{{ containers.solr_version }}
    hostname: solr.{{ container_domain }}
    restart: unless-stopped
    volumes:
      - "search:/opt/solr"
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/solr
{% endif %}
  db:
    image: quay.io/ubersmith/ps57:{{ ubersmith_version }}
    hostname: database.{{ container_domain }}
    restart: unless-stopped
    ports:
      - "127.0.0.1:3306:3306"
    environment:
      MYSQL_USER: ubersmith
      MYSQL_DATABASE: ubersmith
    volumes:
      - "database:/var/lib/mysql"
      - "/etc/mysql/conf.d"
{% if containers.db_version == 5.7 %}
      - "{{ ubersmith_home }}/conf/mysql:/etc/ubersmith.conf.d"
{% endif %}
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/db
{% endif %}
  web:
    image: quay.io/ubersmith/{{ containers.web_container_repo }}:{{ containers.web_version }}
    hostname: {{ container_domain }}
    restart: unless-stopped
    environment:
      MYSQL_USER: ubersmith
      MYSQL_DATABASE: ubersmith
      DATABASE_HOST: "db"
      UBER_HOSTNAME: {{ container_domain }}
      LOCK_BACKEND: redis
      LOCK_SERVERS: "ubersmith_redis_1:6379:1,ubersmith_redis_2:6379:1,ubersmith_redis_3:6379:1"
      MAINTENANCE: 0
      HTTPS_FORCE: 1
      REASON_LOG: 0
      STORAGE_BACKEND: redis
      REDIS_HOST: tcp://ubersmith_redis-data_1:6379?database=2
      SESSION_HOST: tcp://ubersmith_redis-data_1:6379?database=0
      PLUGIN_LOG_HOST: tcp://ubersmith_redis-data_1:6379?database=3
      QUEUE_HOST: tcp://ubersmith_redis-data_1:6379?database=4
      APPLIANCE_TIMEOUT: 30
      ALIPAY_ENABLE: 1
    volumes:
      - "logs:/var/www/ubersmith_root/logs"
      - "webroot:/var/www/ubersmith_root"
      - "search:/opt/solr"
    depends_on:
      - redis-data
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/web
{% endif %}
  php:
    image: quay.io/ubersmith/php73:{{ ubersmith_version }}
    hostname: {{ container_domain }}
    restart: unless-stopped
    volumes:
      - "{{ ubersmith_home }}/logs/rsyslog/log:/dev/log"
      - "webroot:/var/www/ubersmith_root"
    depends_on:
      - web
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/php
{% endif %}
  cron:
    image: quay.io/ubersmith/cron:{{ ubersmith_version }}
    hostname: {{ container_domain }}
    restart: unless-stopped
    volumes:
      - "webroot:/var/www/ubersmith_root"
    depends_on:
      - web
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/cron
{% endif %}
  mail:
    image: quay.io/ubersmith/mail:{{ ubersmith_version }}
    hostname: {{ container_domain }}
    restart: unless-stopped
    ports:
      - "25:25"
    volumes:
      - "webroot:/var/www/ubersmith_root"
    networks:
      default:
        aliases:
          - ubersmith.mail
    depends_on:
      - web
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/mail
{% endif %}
  rwhois:
    image: quay.io/ubersmith/xinetd:{{ ubersmith_version }}
    hostname: {{ container_domain }}
    restart: unless-stopped
    ports:
      - "4321:4321"
    volumes:
      - "webroot:/var/www/ubersmith_root"
    depends_on:
      - web
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/rwhois
{% endif %}
  redis:
    image: quay.io/ubersmith/redis:{{ containers.redis_version }}
    restart: unless-stopped
  redis-data:
    image: quay.io/ubersmith/redis:{{ containers.redis_version }}
    restart: unless-stopped
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/redis-data
{% endif %}
    volumes:
      - redis:/data
  redis-commander:
    image: rediscommander/redis-commander:latest
    restart: "no"
    hostname: rediscommander.{{ container_domain }}
    environment:
      REDIS_HOSTS: default:ubersmith_redis-data_1:6379:3
  backup:
    image: quay.io/ubersmith/xtrabackup:{{ containers.backup_version }}
    hostname: backups.{{ container_domain }}
    # entrypoint: /mysqldump.sh
    environment:
      DATABASE_HOST: db
    volumes:
      - "{{ ubersmith_home }}/backup:/backup"
      - "database:/var/lib/mysql"
    depends_on:
      - db
  rsyslog:
    image: quay.io/ubersmith/rsyslog:{{ ubersmith_version }}
    hostname: rsyslog.{{ container_domain }}
    volumes:
      - "{{ ubersmith_home }}/logs/rsyslog/:/var/run/rsyslog/dev/"
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/ubersmith
{% endif %}
  pmm:
    image: percona/pmm-server:{{ containers.pmm_version }}
    hostname: pmm.{{ container_domain }}
    ports:
      - "8443:443"
    volumes:
       - pmm-data:/srv
       - "{{ ubersmith_home }}/conf/ssl/{{ container_domain }}.pem:/etc/nginx/ssl/server.crt"
       - "{{ ubersmith_home }}/conf/ssl/{{ container_domain }}.key:/etc/nginx/ssl/server.key"
  haproxy:
    image: haproxy:{{ containers.haproxy_version }}
    volumes:
       - "{{ ubersmith_home }}/conf/haproxy/haproxy.cfg:/usr/local/etc/haproxy/haproxy.cfg:ro"
    ports:
      - "3306"
      - "3307"
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/haproxy
{% endif %}
  certbot:
    image: certbot/certbot:{{ containers.certbot_version }}
    # image: certbot/dns-nsone:{{ containers.certbot_version }}
    command: "renew -vvv -n --webroot --webroot-path /var/www/ubersmith_root/app/www"
    # command: "certonly -n --standalone -d {{ virtual_hosts }} --agree-tos -m {{ notify_email }}"
    # command: "certonly -d {{ virtual_hosts }} --agree-tos -m {{ notify_email }} --dns-nsone --dns-nsone-credentials /tmp/.nsone.ini"
    volumes:
      - "{{ ubersmith_home }}/conf/certbot/etc:/etc/letsencrypt"
      - "{{ ubersmith_home }}/conf/certbot/lib:/var/lib/letsencrypt"
      - "{{ ubersmith_home }}/conf/certbot/log:/var/log/letsencrypt"
      - "{{ ubersmith_home }}/conf/ssl:/opt/certbot/deploy"
      - "webroot:/var/www/ubersmith_root"
{% if ansible_os_family != 'Darwin' %}
    logging:
      driver: syslog
      options:
        tag: ubersmith/certbot
{% endif %}
volumes:
  database: {}
  logs: {}
  redis: {}
  search: {}
  webroot: {}
  pmm-data: {}
